<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItems"
    android:background="@drawable/ic_wave"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add Books to the Library"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/brown"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="296dp"
        android:layout_height="102dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/book"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/title_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/edit_text_round_corner"
        android:elevation="10dp"
        android:hint="Book Title"
        android:inputType="text"
        android:padding="10dp"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Book Author"
        android:inputType="text"
        android:layout_margin="20dp"
        tools:ignore="Autofill,HardcodedText"
        android:background="@drawable/edit_text_round_corner"
        android:elevation="10dp"
        android:id="@+id/author_input" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Add Comments"
        android:maxLength="22"
        android:inputType="text"
        android:layout_margin="20dp"
        tools:ignore="Autofill,HardcodedText"
        android:background="@drawable/edit_text_round_corner"
        android:elevation="10dp"
        android:id="@+id/isbn_input" />

    <RatingBar
        android:id="@+id/bookRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"/>


    <Button
        android:id="@+id/addButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Add Books"
        android:background="@drawable/round_btn"
        android:focusable="true"
        android:layout_margin="20dp"
        tools:ignore="HardcodedText" />

</LinearLayout>