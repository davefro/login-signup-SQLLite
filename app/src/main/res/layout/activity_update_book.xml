<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateBook"
    android:background="@drawable/ic_wave"
    android:orientation="vertical"
    android:gravity="center"

    >

    <TextView
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Update Books"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/brown"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="296dp"
        android:layout_height="102dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/book" />

    <EditText
        android:id="@+id/title_input2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/edit_text_round_corner"
        android:elevation="10dp"
        android:hint="Book Title"
        android:inputType="text"
        android:padding="10dp"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Book Author"
        android:inputType="text"
        android:layout_margin="20dp"
        tools:ignore="Autofill,HardcodedText"
        android:background="@drawable/edit_text_round_corner"
        android:elevation="10dp"
        android:id="@+id/author_input2" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="Add Comments"
        android:inputType="text"
        android:layout_margin="20dp"
        tools:ignore="Autofill,HardcodedText"
        android:background="@drawable/edit_text_round_corner"
        android:elevation="10dp"
        android:id="@+id/isbn_input2" />

    <RatingBar
        android:id="@+id/bookRatingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Update Books"
        android:background="@drawable/round_btn"
        android:focusable="true"
        android:layout_margin="20dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Delete Books"
        android:background="@drawable/round_btn"
        android:focusable="true"
        android:layout_margin="10dp"
        tools:ignore="HardcodedText" />



</LinearLayout>